#include <bits/stdc++.h>
using namespace std;

enum Color {WHITE, GRAY, BLACK};

struct Vertex {
    Color color;
    int d;
    int pi;
};

class Graph {
    int V;
    list<int>* adj;
    vector<Vertex> info;
public:
    Graph(int v) : V(v), info(v) {
        adj = new list<int>[V];
        for (int i = 0; i < V; i++) {
            info[i].color = WHITE;
            info[i].d = INT_MAX;
            info[i].pi = -1;
        }
    }

    void addEdge(int u, int v) {
        adj[u].push_back(v);
        adj[v].push_back(u);
    }

    void BFS(int s) {
        info[s].color = GRAY;
        info[s].d = 0;
        info[s].pi = -1;

        queue<int> q;
        q.push(s);

        while (!q.empty()) {
            int u = q.front();
            q.pop();

            for (int v : adj[u]) {
                if (info[v].color == WHITE) {
                    info[v].color = GRAY;
                    info[v].d = info[u].d + 1;
                    info[v].pi = u;
                    q.push(v);
                }
            }
            info[u].color = BLACK;
        }
    }

    void print() {
        for (int i = 0; i < V; i++) {
            cout << "V" << i 
                 << " Color=" << info[i].color 
                 << " d=" << info[i].d 
                 << " pi=" << info[i].pi << "\n";
        }
    }
};

int main() {
    Graph g(6);

    g.addEdge(0, 1);
    g.addEdge(0, 2);
    g.addEdge(1, 3);
    g.addEdge(2, 4);
    g.addEdge(3, 5);

    g.BFS(0);
    g.print();
}
