#include <bits/stdc++.h>
using namespace std;

struct Node {
    int v;        // neighbor vertex
    int w;        // weight
    Node* next;
};

class Graph {
public:
    int V;
    Node** adj;

    Graph(int v) {
        V = v;
        adj = new Node*[V];
        for (int i = 0; i < V; i++)
            adj[i] = NULL;
    }

    void addEdge(int u, int v, int w) {
        // u → v
        Node* n1 = new Node{v, w, adj[u]};
        adj[u] = n1;

        // v → u (undirected)
        Node* n2 = new Node{u, w, adj[v]};
        adj[v] = n2;
    }

    void prim(int start) {
        vector<int> key(V, INT_MAX);    // min weight to connect
        vector<int> parent(V, -1);      // MST parent
        vector<bool> inMST(V, false);   // MST set

        key[start] = 0;

        // min priority queue → {key, vertex}
        priority_queue<pair<int,int>,
                       vector<pair<int,int>>,
                       greater<pair<int,int>>> pq;

        pq.push({0, start});

        while (!pq.empty()) {
            int u = pq.top().second;
            pq.pop();

            if (inMST[u]) continue;
            inMST[u] = true;

            Node* ptr = adj[u];
            while (ptr != NULL) {
                int v = ptr->v;
                int w = ptr->w;

                if (!inMST[v] && w < key[v]) {
                    key[v] = w;
                    parent[v] = u;
                    pq.push({key[v], v});
                }
                ptr = ptr->next;
            }
        }

        cout << "Edge   Weight\n";
        for (int i = 0; i < V; i++) {
            if (parent[i] != -1)
                cout << parent[i] << " - " << i << "   " << key[i] << "\n";
        }
    }
};

int main() {
    Graph g(5);

    g.addEdge(0, 1, 2);
    g.addEdge(0, 3, 6);
    g.addEdge(1, 2, 3);
    g.addEdge(1, 3, 8);
    g.addEdge(1, 4, 5);
    g.addEdge(2, 4, 7);
    g.addEdge(3, 4, 9);

    g.prim(0);
}
