#include <bits/stdc++.h>
using namespace std;

class Graph {
public:
    int V;
    list< list<pair<int,int>> > adj;   // adjacency list using only list

    Graph(int v) {
        V = v;
        adj.resize(V);
    }

    void addEdge(int u, int v, int w) {
        auto it = adj.begin();
        advance(it, u);
        it->push_back({v, w});

        // for undirected graph, add reverse too
        auto it2 = adj.begin();
        advance(it2, v);
        it2->push_back({u, w});
    }

    void dijkstra(int src) {
        vector<int> dist(V, INT_MAX);
        dist[src] = 0;

        // min-priority queue â†’ {distance, node}
        priority_queue<pair<int, int>,
                       vector<pair<int, int>>,
                       greater<pair<int, int>>> pq;

        pq.push({0, src});

        while (!pq.empty()) {
            int u = pq.top().second;
            pq.pop();

            // get adjacency list of u
            auto it = adj.begin();
            advance(it, u);

            for (auto &p : *it) {
                int v = p.first;
                int w = p.second;

                if (dist[u] != INT_MAX && dist[u] + w < dist[v]) {
                    dist[v] = dist[u] + w;
                    pq.push({dist[v], v});
                }
            }
        }

        cout << "Vertex    Distance from Source\n";
        for (int i = 0; i < V; i++)
            cout << i << " \t\t " << dist[i] << "\n";
    }
};

int main() {
    Graph g(5);

    g.addEdge(0, 1, 10);
    g.addEdge(0, 4, 5);
    g.addEdge(1, 2, 1);
    g.addEdge(4, 1, 3);
    g.addEdge(4, 2, 9);
    g.addEdge(4, 3, 2);
    g.addEdge(2, 3, 4);
    g.addEdge(3, 0, 7);

    g.dijkstra(0);
}
